{
  "name": "nidle-monorepo",
  "version": "0.2.1-beta.0",
  "private": true,
  "repository": "git@github.com:yanuoda/nidle.git",
  "license": "MIT",
  "author": "Renguang Han",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "auto-fix": "prettier --write . && eslint packages/**/{lib,src,app}/*.{js,jsx,mjs,ts,tsx}",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "clean": "lerna clean && rimraf node_modules",
    "format": "prettier --write .",
    "lint": "eslint packages/**/{lib,src,app}/*.{js,jsx,mjs,ts,tsx}",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "release": "node ./scripts/release.js --tag --publish"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{css,scss,less,json,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "execa": "^5.1.1",
    "inquirer": "^8.2.0",
    "minimist": "^1.2.5",
    "semver": "^7.3.5",
    "walk-sync": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "conventional-changelog-cli": "^2.2.2",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "^7.0.2",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.1",
    "rollup-plugin-node-resolve": "^5.2.0"
  },
  "engines": {
    "node": ">= 14.0.0"
  }
}
